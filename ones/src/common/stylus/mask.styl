.mask{
    width 100vw;
    height 100vh;
    position fixed;
    left 0px;
    top 0px;
    background #ffe7ba;
    // background-image url('http://img.qqu.cc/uploads/allimg/151209/1-1512091H218.gif');
    background-size 100% 100%;
    .box{
       width: 400px;
       height: 300px;
       background rgba(255,255,255,0.9);
       border-radius: 20px;
       left: 0;
       top: 0;
       position: absolute;
       bottom: 0;
       right: 0;
       margin: auto;
       h3{
        font-size: 35px;
        line-height: 60px;
       }
    }
}